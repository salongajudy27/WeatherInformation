@{
    ViewData["Title"] = "Home Page";
}

<div class="col-lg-12 col-md-12 col-sm-12">
    <h1>Weather Information</h1>
</div>
<form id="frmLocation">
    <div class="form-group">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @Html.Hidden("clientDataUrl", Url.Action("ClientData", "Home"))
            @Html.Hidden("locationDataUrl", Url.Action("GenerateWeatherDetails", "Home"))
            <input type="text" name="location" id="location" placeholder="Enter city,country">
            <button type="submit" class="btn btn-outline-warning">Search</button>
        </div>
    </div>
</form>

<div class="col-lg-12 col-md-12 col-sm-12">
    <h3>Weather Details</h3>
    <div id="_weatherDetails">
    </div>
</div>
